

{{#if showForm}}
<div class="login-wrapper">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h1>{{t "request.login.header"}}</h1>
      <div class="row">
        <div class="col-xs-12">
          <div class="not-functional">
          <div class="form-group">
            <label>{{t "request.login.username-label"}}</label>
              {{input value=username class="form-control"}}
          </div>
          <div class="form-group">
            <label>{{t "request.login.password-label"}}</label>
            {{input type='password' value=password class="form-control"}}
          </div>
          <button class="btn btn-primary btn-block" {{action 'login' username password}}>{{t "request.login.login-button"}}</button>
          </div> <!-- end not-functional -->
          <div class="cas-login-link"><a href="{{casUrl}}" class="small">{{t "request.login.cas-link-text"}}</a></div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}
