<label>
  {{label}}
</label>
{{#x-select class="form-control" on-change=(action onSelect) value=selectedItem as |item|}}
  {{#item.option}}{{label}}{{/item.option}}
  {{#each locations as |loc|}}
    {{#item.option value=loc.id disabled=loc.disabled}}{{loc.name}}
      {{#if loc.disabled}}
        {{#if loc.pickupLocationClosed}}
          ({{t "components.pick-location.library-closed"}})
        {{else}}
          {{#if loc.pickupTemporaryClosed}}
            ({{t "components.pick-location.cannot-temporary-pickup-here"}})
          {{else}}
            ({{t "components.pick-location.cannot-pickup-here"}})
          {{/if}}
        {{/if}}
      {{/if}}
    {{/item.option}}
  {{/each}}
{{/x-select}}
